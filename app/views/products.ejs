<%- include('partials/head') %>

    <main class="main_article">
        <section id="article">
            <h1 style="background-image: url('/00.assets/coffees/<%= coffee.ref %>.png')">
                <%= coffee.name %>
            </h1>

            <p>
                <%= coffee.description %>
            </p>

            <table>
                <tbody>
                    <tr>
                        <th>Origine</th>
                        <td>
                            <%= coffee.origin %>
                        </td>
                    </tr>
                    <tr>
                        <th>Caractéristique principale</th>
                        <td>
                            <%= coffee.characteristic %>
                        </td>
                    </tr>
                    <tr>
                        <th>Prix au kg</th>
                        <td>
                            <%= coffee.price %> €
                        </td>
                    </tr>
                    <tr>
                        <th>Disponible actuellement</th>
                        <td>
                            <%= coffee.available %>
                        </td>
                    </tr>
                    <tr>
                        <th>Référence SKU du produit</th>
                        <td>
                            <%= coffee.ref %>.
                        </td>
                    </tr>
                </tbody>
            </table>

            <a href="/catalogue" class="button">Retour au catalogue</a>

        </section>
    </main>

    <%- include('partials/footer') %>